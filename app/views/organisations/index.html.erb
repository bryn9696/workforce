<p style="color: green"><%= notice %></p>

<h1>Adnat</h1>
<% if logged_in? %>
  <h3>Logged in as <%=current_user.name%></h3>
  Join an existing organisation or create a new one
<% end %>

<h1>Organisations</h1>

<table class="table table-hover">
  <thead class='thead-dark'>
    <tr>
      <th>Name</th>
      <th>Hourly Rate</th>

      <th> </th>
    </tr>
  </thead>
  <%= @organisations.inspect %>
  <%= current_user.inspect %>

  <tbody>
    <% @organisations.each do |organisation| %>
      <tr>
          <td><%= organisation.name %></td>
          <td><%= organisation.hourly_rate %> </td>

          <td><%= link_to "Join", organisation%></td>
          <td><%= link_to "Edit", edit_organisation_path(organisation) %></td>
 
          <td><%= link_to 'Delete', organisation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

<%= link_to "New organisation", new_organisation_path %>
</tbody>
</table>


