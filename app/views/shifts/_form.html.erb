<%= form_with(model: shift) do |form| %>
  <% if shift.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(shift.errors.count, "error") %> prohibited this shift from being saved:</h2>

      <ul>
        <% shift.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :full_name, style: "display: block" %>
    <%= form.text_field :full_name %>
  </div>
  
  <div>
    <%= form.label :shift_date, style: "display: block" %>
    <%= form.date_field :shift_date %>
  </div>

  <div>
    <%= form.label :start_time, style: "display: block" %>
    <%= form.time_field :start_time %>
  </div>

  <div>
    <%= form.label :finish_time, style: "display: block" %>
    <%= form.time_field :finish_time %>
  </div>

  <div>
    <%= form.label :break_length, style: "display: block" %>
    <%= form.number_field :break_length %>
  </div>

  <div>
    <%= form.submit %>
  </div>

  <div class="field form-group">
    <%=form.number_field :user_id, id: :users_user_id, class:"form-control", value: current_user.id, type: :hidden%>
  </div>
<% end %>
