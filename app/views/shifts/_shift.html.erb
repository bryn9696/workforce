<div id="<%= dom_id shift %>">
  <p>
    <strong>Full name:</strong>
    <%= shift.full_name %>
  </p>

  <p>
    <strong>Shift date:</strong>
    <%= "#{shift.shift_date.mday}/#{shift.shift_date.mon}/#{shift.shift_date.year}" %>
  </p>

  <p>
    <strong>Start time:</strong>
    <%= "#{shift.start_time.hour}:#{shift.start_time.min}" %>
  </p>

  <p>
    <strong>Finish time:</strong>
    <%= "#{shift.finish_time.hour}:#{shift.finish_time.min}" %>
  </p>

  <p>
    <strong>Break length:</strong>
    <%= shift.break_length %>
  </p>

</div>
