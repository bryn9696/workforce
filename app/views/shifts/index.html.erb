<p style="color: green"><%= notice %></p>

<h1>Shifts</h1>
<table class="table table-hover">
  <thead class='thead-dark'>
    <tr>
      <th>Employee Name</th>
      <th>Shift Date</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Break Length (minutes)</th>
      <th>Hours Worked</th>
      <th>Shift Cost</th>
      <th> </th>
    </tr>
  </thead>
<div id="shifts">
  <tbody>
  <% @shifts.each do |shift| %>
    <tr>
      <td><%= shift.full_name %></td>
      <td><%= shift.start_time %></td>
      <td><%= shift.finish_time %> </td>
      <td><%= shift.break_length %> </td>
      <td><%= link_to "Show", shift %></td>
      <td><%= link_to "Edit", edit_shift_path(shift) %></td>
      <td><%= link_to 'Delete', shift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</div>

<%= link_to "New shift", new_shift_path %>

</tbody>
</table>